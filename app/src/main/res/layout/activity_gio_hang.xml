<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5733D">

    <!-- Thanh tiêu đề -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Back"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:tint="#000000" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Giỏ hàng"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Danh sách sản phẩm -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/action_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/cartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Item giỏ hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@drawable/bg_item_cart"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/comsuon"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên: Cơm sườn"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá: 40.000đ"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />
                    />

                    <!-- Tăng/giảm số lượng -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btn_decrease"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_blue_button"
                            android:contentDescription="Giảm"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_plus"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#000"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/btn_increase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_blue_button"
                            android:contentDescription="Tăng"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_minus"
                            app:tint="#FFFFFF" />
                        <ImageButton
                            android:id="@+id/btn_delete"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_red_button"
                            android:src="@drawable/ic_delete"
                            android:contentDescription="Xoá"
                            android:scaleType="centerInside"
                            app:tint="#FFFFFF" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- Copy thêm item nếu cần -->
        </LinearLayout>
    </ScrollView>

    <!-- Nút Mua ngay & Thêm vào giỏ -->
    <LinearLayout
        android:id="@+id/action_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mua ngay"
            android:backgroundTint="#FFF200"
            android:textColor="#000" />

        <Space android:layout_width="12dp" android:layout_height="wrap_content" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm vào giỏ hàng"
            android:backgroundTint="#D4C000"
            android:textColor="#000" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
