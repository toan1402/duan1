<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E5733D">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Back"
            android:padding="8dp"
            android:scaleType="centerInside"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foodde"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Danh sách món ăn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/cart_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Một món ăn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/item_bg_rounded"
                android:gravity="center_vertical">

                <!-- Ảnh món ăn -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop" />

                <!-- Thông tin và nút -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <!-- Tên & giá -->
                    <TextView
                        android:id="@+id/tv_food_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên: Cơm sườn"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/tv_food_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giá: 40.000đ"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <!-- Tăng/giảm/xoá -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btn_decrease"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_blue_button"
                            android:contentDescription="Giảm"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_minus"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/btn_increase"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_blue_button"
                            android:contentDescription="Tăng"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_plus"
                            app:tint="#FFFFFF" />

                        <ImageButton
                            android:id="@+id/btn_delete"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_red_button"
                            android:src="@drawable/ic_delete"
                            android:contentDescription="Xoá"
                            android:scaleType="centerInside"
                            app:tint="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Nút thanh toán -->
    <Button
        android:id="@+id/btn_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mua Hàng"
        android:layout_gravity="center"
        android:backgroundTint="#F2F147"
        android:textColor="#000000"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />
</LinearLayout>
