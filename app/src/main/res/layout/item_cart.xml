<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/item_bg_rounded"
    android:gravity="center_vertical">

    <!-- Ảnh sản phẩm -->
    <ImageView
        android:id="@+id/img_food"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <!-- Thông tin sản phẩm và nút điều khiển -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000" />

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/tv_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 0đ"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Bộ điều khiển số lượng -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_decrease"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_blue_button"
                android:src="@drawable/ic_minus"
                android:contentDescription="Giảm"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btn_increase"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_blue_button"
                android:src="@drawable/ic_plus"
                android:contentDescription="Tăng"
                android:scaleType="centerInside" />

            <!-- Nút xóa -->
            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_red_button"
                android:src="@drawable/ic_delete"
                android:contentDescription="Xoá"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
